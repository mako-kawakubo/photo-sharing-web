<button id="openModalButton">ユーザー設定・変更</button>
<%  console.log(username) %>
  <div id="modal" class="modal">
    <div class="modal-content">
      <span class="close-button" >&times;</span>
      <h2>ユーザー設定・変更</h2>
      <form id="inputForm">
        <label for="username">ユーザー名:</label>
        <input type="text" id="username" name="username" placeholder="変更前：<%= username %>" required>
        <button type="button" id="saveButton">保存</button>
        <br><br>
        <!--
        <label for="email">Eメール:</label>
        <input type="email" id="email" name="email" required><br><br>
        -->
        
        
        <button tyoe="button" id="closeModalButton">閉じる</button>
      </form>
      <div id="messageArea" class="message-area"></div>
    </div>
  </div>


    <div class="uploadBox">

      <form action="sub/uploadImage" method="POST" enctype="multipart/form-data">
        <% if (typeof message !=='undefined' ) { %>
          <p>
            <%= message %>
          </p>
          <% } %>
            <label>
              画像をアップロード
              <input type="file" name="image" class="form-control-file">
            </label>
            <br>
            <label>
              投稿文を入力

              <textarea type="text" name="postText" id="postText" class="form-control"
                placeholder="キャプションを入力"></textarea>

            </label>
            <button type="submit" class="btn btn-primary">アップロード</button>
      </form>
    </div>

    <div class="container">
      <% imageData.forEach((image, index)=> { %>
        <div class="frame">
          <div class="photo_head flex">
            <div class="icon">
              <% if(image.topimg === null) { %>  
                <img width="48" height="48" src="https://img.icons8.com/emoji/48/rabbit-face-emoji.png" alt="rabbit-face-emoji" />                                          
                <% } else { %>
                  <img width="48" height="48" src="<%= image.topimg  %>" alt="rabbit-face-emoji" />                                          
              <% } %>
                
              <p>@<%= image.user %>
              </p>
            </div>
          </div>

          <div class="post">
            <img src="<%= image.url %>" alt="<%= image.name %>" class="card-img-top">
            <p>
              <%= image.name %>
            </p>
          </div>




          <div class="edit-form" style="display: none;">
            <form action="/sub/edit" method="post">
              <input type="hidden" name="imageId" value="<%= image.id %>">
              <p class="upload-message"></p>
              <input type="text" name="editedText" id="editInput" class="editInput" value="<%= image.name %>">
              <button type="submit" class="saveEditButton" id="saveEditButton">
                <span class="bn54span">保存</span></button>
              <button type="button" class="closeFormButton">
                <span class="bn54span">
                  閉じる
                </span>
              </button>
            </form>
          </div>


          <div class="link_area flex">
            <div class="left flex">
              <span><img src="https://img.icons8.com/glyph-neue/64/love-circled--v1.png"
                  alt="love-circled--v1" /></span>
              <span><img
                  src="https://img.icons8.com/external-inkubators-detailed-outline-inkubators/25/external-comment-video-interface-inkubators-detailed-outline-inkubators.png"
                  alt="external-comment-video-interface-inkubators-detailed-outline-inkubators" /></span>
              <span><img
                  src="https://img.icons8.com/external-yogi-aprelliyanto-basic-outline-yogi-aprelliyanto/64/external-paper-plane-design-thinking-yogi-aprelliyanto-basic-outline-yogi-aprelliyanto.png"
                  alt="external-paper-plane-design-thinking-yogi-aprelliyanto-basic-outline-yogi-aprelliyanto" /></span>
            </div>
            <div class="right">
              <span><img width="32" height="32"
                  src="https://img.icons8.com/external-anggara-outline-color-anggara-putra/32/external-bookmark-ecommerce-interface-anggara-outline-color-anggara-putra.png"
                  alt="external-bookmark-ecommerce-interface-anggara-outline-color-anggara-putra" /></span>
            </div>
          </div>


          <div class="button-container">
            <button class="bn54 edit-button" data-index="<%= index %>">
              <span class="bn54span">

                <div class="edit icon">
                </div>
                編集
              </span>
            </button>
            <button class="bn54 delete-button" data-index="<%= index %>" data-post-id="<%= image.id %>">
              <span class="bn54span">
                <div class="trash icon"></div>
                削除
              </span>
            </button>
          </div>


        </div>
        <% }) %>

    </div>

